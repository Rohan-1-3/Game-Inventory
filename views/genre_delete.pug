extends layout

block content
    h1 #{title} : #{genre.name}

    if games.length
        p #[strong Delete the following games before attempting to delete this genre.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Games
            dl
                each game in games
                    dt
                        a(href=game.url) #{game.title}
                        span  (#{game.year_formatted})
    else
        p Do you really want to delete this Genre?

        form(method='POST')
            div.form-group
                input#genreid.form-control(type='hidden', name='genreid', value=genre._id )

            button.btn.btn-primary(type='submit') Delete