extends layout

block content
    h1 #{title} : #{game.title}

    if gameinstance_list.length
        p #[strong Delete the following game copies before attempting to delete this game.]
        div(style='margin-left:20px;margin-top:20px')
            h4 Game Instances
            dl
             each instance in gameinstance_list
                dt
                    a(href=instance.url) #{instance._id}
                dd -#{instance.status}
    else
        p Do you really want to delete this Game?

        form(method='POST')
            div.delete_form
                input#gameid.form-control(type='hidden', name='gameid', value=game._id )

            button.btn.btn-primary(type='submit') Delete